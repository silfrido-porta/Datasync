---
const navItems = [
  {
    title: "Inicio",
    label: "inicio",
    url: "/#inicio",
  },
  {
    title: "Soluciones",
    label: "soluciones",
    url: "/#soluciones",
  },
  {
    title: "Nosotros",
    label: "nosotros",
    url: "/#nosotros",
  },
  {
    title: "Contacto",
    label: "contacto",
    url: "mailto:miduga@gmail.com",
  },
]
---

<header class="header">
  <nav class="nav">
    <a aria-label="Datasync" href="/">
      <img src="/logo.svg" height="60" width="195" alt="Logo Datasyng">
    </a>
    <ul class="list-nav">
      {
        navItems.map((link) => (
          <li>
            <a aria-label={link.label} href={link.url}>
              {link.title}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>

<style>
  .header{
    max-width: 1180px;
    width: 100%;
    margin: 0 auto;
    padding: .5rem 1.6rem;
    position: fixed;
    top: 1.2rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 9;
    border-radius: 50px;
    background: #0f1014b3;
    border: 0.001rem solid rgba(255, 255, 255, .1);
    backdrop-filter: blur(20px);
  }
  .nav{
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .list-nav{
    list-style: none;
    padding-left: 0;
    margin-top: 0;
    margin-bottom: 0;
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  .list-nav li a{
    color: #fff;
    letter-spacing: 0.04rem;
    text-decoration: none;
    opacity: .9;
    transition: all .3s;
  }
  .list-nav li a:hover{
    opacity: 1;
    color: var(--principal);
  }
</style>